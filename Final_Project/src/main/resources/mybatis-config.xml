<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 김재현 추가 시작 -->
	<!-- 500Error 부적절한 열유형 뜰떄 null 값이 들어가서 그러는뎅.. 이거를 추가함으로 해결가능? ㅇ -->
	<!-- null처리용 -->
	<settings>
		<setting name="cacheEnabled" value="false" />
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	<!-- 김재현 추가 끝 -->
	<typeAliases>
		<typeAlias alias="board" type="com.ob.biz.vo.BoardVO" />
		<typeAlias alias="users" type="com.ob.biz.vo.UsersVO" />
		<typeAlias alias="no_users" type="com.ob.biz.vo.No_UsersVO" />
		<typeAlias alias="comments" type="com.ob.biz.vo.CommentsVO" />
		<typeAlias alias="movie" type="com.ob.biz.vo.MovieVO" />
		<typeAlias alias="movie_history"
			type="com.ob.biz.vo.Movie_HistoryVO" />
		<typeAlias alias="reservation"
			type="com.ob.biz.vo.ReservationVO" />
		<typeAlias alias="theater"
			type="com.ob.biz.vo.TheaterVO" />

	</typeAliases>

	<mappers>
		<mapper resource="mappings/board-mapper.xml" />
		<mapper resource="mappings/users-mapper.xml" />
		<mapper resource="mappings/no_users-mapper.xml" />
		<mapper resource="mappings/comments-mapper.xml" />
		<mapper resource="mappings/movie-mapper.xml" />
		<mapper resource="mappings/movie_history-mapper.xml" />
		<mapper resource="mappings/reservation-mapper.xml" />
		<mapper resource="mappings/theater-mapper.xml" />
	</mappers>


</configuration>











